. /cscripts/env.sh

cat > /boot/grub/grub.cfg << "EOF"
# Begin /boot/grub/grub.cfg
set default=0
set timeout=5

insmod part_gpt
insmod ext2
set root=(hd0,1)

menuentry "Umvirt Linux From Scratch 0.2.4" {
        linux   /boot/vmlinuz root=/dev/sda1 ro loglevel=3 console=ttyS0 console=tty0
}
EOF

if [[ "$LFS_TGT" == "x86_64-lfs-linux-gnu" ]]
then

cat > /boot/grub/grub.cfg.efi << "EOF"
# Begin /boot/grub/grub.cfg
set default=0
set timeout=5

insmod part_gpt
insmod ext2
set root=(hd0,1)

insmod efi_gop
insmod efi_uga
if loadfont /boot/grub/fonts/unicode.pf2; then
  terminal_output gfxterm
fi

menuentry "Umvirt Linux From Scratch 0.2.4" {
        linux   /boot/vmlinuz root=/dev/sda1 ro console=ttyS0 console=tty0
}

menuentry "Firmware Setup" {
fwsetup
}
EOF

fi
